#include <stdio.h>
#include <stdlib.h>

#define ZAHL 345

int main() {
    int a = ZAHL;
    int querSum;

    while (a!=0){
        querSum += a%10;
        a=a/10;
        printf("querSum: %d\n", querSum);
        printf("a: %d\n", a);
    }

    printf("Die Quersumme von Zahl %d ist: %d", ZAHL,querSum);
    return 0;
}

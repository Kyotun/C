#include <stdio.h>

#define ZAHL 345

int main() {
    int a = ZAHL;
    int querSum = 0;

    for(int i = 0; a > 0; i++){
    	printf("querSum: %d\t", querSum);
		printf("a: %d\n", a);
		querSum += a%10;
		a=a/10;

    }

    printf("Die Quersumme von Zahl %d ist: %d", ZAHL,querSum);
    return 0;
}

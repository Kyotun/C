#include <stdio.h>

int main()
{
	int a = -2;
	unsigned int b = 8;
	signed char c = 0;

	a--;
	printf("%d\n", a);
	a <<= 3;
	printf("%d\n", a);
	a /= 12;
	printf("%d\n", a);
	a = a%2;
	printf("%d\n\n", a);

	b >>= 1;
	printf("%d\n", b);
	b |= 3;
	printf("%d\n", b);
	b ^= 15;
	printf("%d\n", b);
	b += 1;
	printf("%d\n\n", b);

	c = c -17;
	printf("%d\n", c);
	c *= -1;
	printf("%d\n", c);
	c += 110;
	printf("%d\n", c);
	c = ~c-1;
	printf("%d\n\n", c);

    return 0;
}

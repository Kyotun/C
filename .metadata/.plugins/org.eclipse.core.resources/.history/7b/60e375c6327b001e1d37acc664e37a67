#include <stdio.h>
#define N 4 /* fuer eine NxN-Matrix */

int main() {
  double matrix[N][N]; /* Deklaration der Matrix als 2-dim. Array */
  int zeile, spalte;
  double temp; /* Zwischenspeicher fuer Matrixwert */

  /* Initialisierung mit Benutzereingabe */
  for (int i = 0; i < N; i++){
    for (int j = 0; j < N; j++){
    	printf("Geben Sie bitte das Element ein: [%d],[%d]\n", i, j);
    	scanf("%d", matrix[i][j]);
    }
  }

  /* Transponierung = Spiegelung an der Hauptdiagonalen */
  for (int a = 0; a < N; a++){
    for (int b = 0; b < N; b++) {
    	temp = matrix[a][b];
    	matrix[a][b] = matrix[b][a];
    	matrix[b][a] = temp;
    }
  }

  /* Ausgabe der Matrix zeilenweise */
  for (int c = 0; c < N; c++) {
    for (int d = 0; d < N; d++){
      printf("%.2lf\t", );

    }
    printf("\n");
  }

  return 0;
}

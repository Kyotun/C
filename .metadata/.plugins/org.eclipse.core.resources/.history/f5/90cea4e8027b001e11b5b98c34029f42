#include <stdio.h>

int main()
{
	int a = -2;
	unsigned int b = 8;
	signed char c = 0;

	a--;
	printf("%d\n", a);
	a <<= 3;
	printf("%d\n", a);
	a /= 12;
	printf("%d\n", a);
	a = a%2;
	printf("%d\n", a);

	b >>= 1;
	printf("%d\n", b);
	b |= 3;
	printf("%d\n", b);
	b ^= 15;
	printf("%d\n", b);
	b += 1;
	printf("%d\n", b);
    return 0;
}
